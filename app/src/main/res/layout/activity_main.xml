<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".MainActivity">

   <RelativeLayout
    android:background="@drawable/art"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/medicinebuttonID"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/White"
        android:text="MEDICINE !?"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/appointbuttonID"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/White"
        android:text="APOINTMENT"

        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/alarmbuttonID"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:background="@color/White"
        android:text="Set alarm"

        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/hospitalID"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="190dp"
        android:background="@color/White"
        android:text="Hospital"

        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/symptommbuttonID"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        android:background="@color/White"
        android:text="SympTom"

        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/buttonID"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="350dp"
        android:background="@color/White"
        android:text="Nope"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
       app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/White"
        app:itemTextColor="@color/colorPrimaryDark"
        app:itemIconTint="@color/colorPrimaryDark"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>